@model Inventorium.Models.Request

@{
    ViewData["Title"] = "Submit Request";
}

<div class="container mt-5">
    <h2>Submit a Request</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="ItemName" class="form-label"></label>
            <input asp-for="ItemName" class="form-control" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reason" class="form-label"></label>
            <textarea asp-for="Reason" class="form-control"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit Request</button>
        <a asp-controller="Inventory" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
